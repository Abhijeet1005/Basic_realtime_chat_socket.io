<!DOCTYPE html>
<html>
  <head>
    <title><%=user %></title>

    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    
    <ul id="messages"></ul>
    <form id="form" action="">
      <input id="input" autocomplete="off" /><button>Send</button><button id="Home_button" onclick="redirect_home()">Home</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
   
  <script>

    let socket = io();
    const user = "<%= user %>";
  
    let form = document.getElementById('form');
    let input = document.getElementById('input');
    

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      if (input.value) {
        console.log(user)
        socket.emit('chat message',`<<${user}>> ${input.value}`);
        input.value = '';
      }
    });

    socket.on('chatmessage_return', function(message_list) {
      const messages = document.getElementById('messages'); // Get the ul element
    
      
      messages.innerHTML = '';
    
      for (let msg of message_list) {
        let item = document.createElement('li');
        item.textContent = msg;
        console.log(typeof item)
        messages.appendChild(item);
      }
    
      window.scrollTo(0, document.body.scrollHeight);
    });
    

    function redirect_home(){
      let newURL = "/"
      window.location.href = newURL;
      };
  </script>
  </body>
</html>